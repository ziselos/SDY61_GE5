<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBakground"
    tools:context="com.example.zisis.sdy61_ge5.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">



    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Εφαρμογή Απομακρυσμένου Αποθηκευτικού χώρου"
        android:id="@+id/textWelcome"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ζήσης Δημητριάδης"
        android:id="@+id/textName"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_below="@+id/textWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ΕΙΣΟΔΟΣ"
        android:textStyle="bold"
        android:id="@+id/btnEntry"
        android:background="@color/colorAccent"
        android:layout_marginTop="76dp"
        android:layout_below="@+id/textName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

